<?xml version="1.0" encoding="utf-8" ?>
<mvvm:TinyView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mvvm="clr-namespace:TinyMvvm;assembly=TinyMvvm.Maui"
             xmlns:vm="clr-namespace:PostsApp.ViewModels"
             xmlns:models="clr-namespace:PostsApp.Models"
             x:Class="PostsApp.Views.PostView"
             Title="{Binding Post.Title}" x:DataType="vm:PostViewModel">
    <ScrollView>
        <VerticalStackLayout>
        <Label 
            Text="{Binding Post.Body}" FontSize="Body"/>
    </VerticalStackLayout>

    </ScrollView>
    
</mvvm:TinyView>
